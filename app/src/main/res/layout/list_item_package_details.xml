<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_event"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/nearby_restaurants_list_icon_size"
                android:layout_height="@dimen/nearby_restaurants_list_icon_size"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:src="@drawable/img_ad_1" />

            <TextView
                android:layout_toLeftOf="@id/iv_cart"
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_toRightOf="@id/iv_icon"
                android:lines="1"
                android:singleLine="true"
                android:text="Loreum ipsum"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_size_s" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_toRightOf="@id/iv_icon"
                android:lines="1"
                android:singleLine="true"
                android:text="3300 INR"
                android:textColor="@color/colorRedText"
                android:textSize="@dimen/text_size_xs" />

            <ImageView
                android:id="@+id/iv_cart"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/ic_add_to_cart_grey"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_16"
                />

            <TextView
                android:visibility="gone"
                android:drawablePadding="@dimen/margin_8"
                android:drawableLeft="@drawable/ic_add_to_cart_white"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_16"
                android:textSize="@dimen/text_size_xs"
                android:text="Add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>