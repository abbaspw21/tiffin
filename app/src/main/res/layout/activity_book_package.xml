            <RelativeLayout
                android:id="@+id/rl_bf"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@color/colorWhite"
                android:layout_below="@id/tv_choose_meal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:textSize="@dimen/text_size_s"
                    android:textColor="@color/colorSecondaryText"
                    android:id="@+id/cb_breakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Breakfast"
                    android:layout_marginRight="@dimen/margin_8"/>

                <TextView
                    android:id="@+id/tv_breakfast_price"
                    android:gravity="center_vertical"
                    android:layout_alignTop="@id/cb_breakfast"
                    android:layout_alignBottom="@id/cb_breakfast"
                    android:text="2000 INR"
                    android:layout_marginRight="@dimen/margin_24"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_s"
                    android:textColor="@color/colorSecondaryText"
                    />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_breakfast_timeslot"
                    android:layout_below="@id/cb_breakfast"
                    android:editable="false"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:layout_marginRight="@dimen/margin_8"
                    android:background="@color/colorWhite"
                    android:drawableRight="@drawable/ic_time_grey"
                    android:hint="Time Slot"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textColor="@color/colorEditText"
                    android:textSize="@dimen/text_size_s"
                    android:theme="@style/AppThemeBlack.EditText" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/margin_16"
                android:id="@+id/rl_lunch"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@color/colorWhite"
                android:layout_below="@id/rl_bf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:textSize="@dimen/text_size_s"
                    android:textColor="@color/colorSecondaryText"
                    android:id="@+id/cb_lunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Lunch"
                    android:layout_marginRight="@dimen/margin_16"/>

                <TextView
                    android:id="@+id/tv_lunch_price"
                    android:gravity="center_vertical"
                    android:layout_alignTop="@id/cb_lunch"
                    android:layout_alignBottom="@id/cb_lunch"
                    android:text="2000 INR"
                    android:layout_marginRight="@dimen/margin_24"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_s"
                    android:textColor="@color/colorSecondaryText"
                    />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_lunch_timeslot"
                    android:editable="false"
                    android:focusable="false"
                    android:layout_below="@id/cb_lunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:layout_marginRight="@dimen/margin_8"
                    android:background="@color/colorWhite"
                    android:drawableRight="@drawable/ic_time_grey"
                    android:hint="Time Slot"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textColor="@color/colorEditText"
                    android:textSize="@dimen/text_size_s"
                    android:theme="@style/AppThemeBlack.EditText" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_dinner"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@color/colorWhite"
                android:layout_below="@id/rl_lunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:textSize="@dimen/text_size_s"
                    android:textColor="@color/colorSecondaryText"
                    android:id="@+id/cb_dinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Dinner"
                    android:layout_marginRight="@dimen/margin_16"/>

                <TextView
                    android:id="@+id/tv_dinner_price"
                    android:gravity="center_vertical"
                    android:layout_alignTop="@id/cb_dinner"
                    android:layout_alignBottom="@id/cb_dinner"
                    android:text="2000 INR"
                    android:layout_marginRight="@dimen/margin_24"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_s"
                    android:textColor="@color/colorSecondaryText"
                    />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_dinner_timeslot"
                    android:editable="false"
                    android:focusable="false"
                    android:layout_below="@id/cb_dinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:layout_marginRight="@dimen/margin_8"
                    android:background="@color/colorWhite"
                    android:drawableRight="@drawable/ic_time_grey"
                    android:hint="Time Slot"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textColor="@color/colorEditText"
                    android:textSize="@dimen/text_size_s"
                    android:theme="@style/AppThemeBlack.EditText" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
