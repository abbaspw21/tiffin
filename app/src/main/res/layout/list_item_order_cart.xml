<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_type"
        android:layout_centerVertical="true"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_16"
        android:src="@drawable/ic_veg"
        />

    <TextView
        android:layout_centerVertical="true"
        android:text="200"
        android:id="@+id/tv_price"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_s"
        android:textColor="@color/colorSecondaryText"
        />

    <LinearLayout
        android:id="@+id/ll_quantity"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:background="@drawable/border_quantity"
        android:layout_toLeftOf="@id/tv_price"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:paddingTop="@dimen/margin_4"
            android:paddingBottom="@dimen/margin_4"
            android:paddingLeft="@dimen/margin_4"
            android:paddingRight="@dimen/margin_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_remove"
            android:src="@drawable/ic_remove_grey_16"
            />

        <TextView
            android:layout_marginLeft="@dimen/margin_4"
            android:layout_marginRight="@dimen/margin_4"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_s"
            android:textColor="@color/colorPrimary"
            android:text="2"
            android:id="@+id/tv_quantity"
            />

        <ImageView
            android:paddingTop="@dimen/margin_4"
            android:paddingBottom="@dimen/margin_4"
            android:paddingLeft="@dimen/margin_4"
            android:paddingRight="@dimen/margin_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_add"
            android:src="@drawable/ic_add_grey_16"
            />
    </LinearLayout>
    <TextView
        android:layout_toRightOf="@id/iv_type"
        android:layout_centerVertical="true"
        android:text="Lorem Ipsum"
        android:id="@+id/tv_name"
        android:layout_toLeftOf="@id/ll_quantity"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:lines="1"
        android:textSize="@dimen/text_size_s"
        android:textColor="@color/colorSecondaryText"
        />



</RelativeLayout>