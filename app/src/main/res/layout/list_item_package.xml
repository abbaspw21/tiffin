<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_icon_30"
                android:layout_width="@dimen/nearby_restaurants_list_icon_size"
                android:layout_height="@dimen/nearby_restaurants_list_icon_size"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:src="@drawable/img_ad_1" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_toRightOf="@id/iv_icon_30"
                android:lines="1"
                android:singleLine="true"
                android:text="Daimond Pack"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_size_s"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_toRightOf="@id/iv_icon_30"
                android:lines="2"
                android:text="Loreum ipsum Loreum ipsum Loreum ipsum Loreum ipsum Loreum ipsum Loreum ipsum"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_size_xxs" />

            <TextView
                android:id="@+id/tv_price"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_size"
                android:text="@string/Rs3000"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_16"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
