<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="#00ffffff"
                android:startColor="@color/colorDialogBg"
                android:type="linear" />

            <corners
                android:radius="0dp"/>
        </shape>
    </item>
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorOrange"/>//Background Color
        </shape>
    </item>
</layer-list>