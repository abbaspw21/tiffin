<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Space contains text -->
        <!-- PinEntryEditText has error set -->
        <item android:state_active="true">
            <shape android:shape="rectangle">
                <stroke android:width="1dp" android:color="@color/colorRedText" />
                <solid android:color="@color/colorWhite" />
            </shape>
        </item>
        <item android:state_checked="true" android:state_focused="true">
            <shape android:shape="rectangle">
                <stroke android:width="1dp" android:color="#CCCCCC" />
                <solid android:color="@color/colorWhite" />
            </shape>
        </item>
        <!--Space is the next space for character input -->
        <item android:state_focused="true" android:state_selected="true">
            <shape android:shape="rectangle">
                <stroke android:width="1dp" android:color="#CCCCCC" />
                <solid android:color="@color/colorWhite" />
            </shape>
        </item>
        <!-- PinEntryEditText is focused -->
        <item android:state_focused="true">
            <shape android:shape="rectangle">
                <stroke android:width="1dp" android:color="#CCCCCC" />
                <solid android:color="@color/colorWhite" />
            </shape>
        </item>
        <!-- PinEntryEditText is not focused -->
        <item>
            <shape android:shape="rectangle">
                <stroke android:width="1dp" android:color="@color/colorDivider" />
                <solid android:color="@color/colorWhite" />
            </shape>
        </item>

    </selector>